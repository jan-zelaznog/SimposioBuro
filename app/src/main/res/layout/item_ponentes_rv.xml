<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_margin="@dimen/common_padding_min"
    app:cardCornerRadius="40dp"
    app:cardElevation="10dp"

    android:foreground="?android:attr/selectableItemBackground"
    android:clickable="true"
    android:focusable="true"

    android:id="@+id/cardview_ponente"
    >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="horizontal">
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/ic_ponentes"

            />

        <LinearLayout
            android:paddingStart="@dimen/common_padding_default"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"


            >
            <TextView
                android:id="@+id/tv_name_ponenete"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Alejandro CortÃ©s Luque"

                android:textColor="@color/rosa_principal"
                android:fontFamily="@font/montserrat_bold"
                android:textSize="23sp"
                app:flow_verticalAlign="center"

                />

            <TextView
                android:id="@+id/tv_cargo_ponente"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="GERENTE COMERCIAL SECTOR FINANCIERO"
                android:textColor="@color/gris_textos_eobs"
                android:fontFamily="@font/montserrat_regular"
                android:textSize="16sp"
                app:flow_verticalAlign="center"

                />


        </LinearLayout>


    </LinearLayout>



</androidx.cardview.widget.CardView>