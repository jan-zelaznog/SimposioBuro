<?xml version="1.0" encoding="utf-8"?>
<androidx.core.widget.NestedScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/common_padding_default"
        android:orientation="vertical">
        >

        <TextView
            android:id="@+id/tvTallerHorario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Taller en Horario 00:00 a 00:00"
            android:paddingBottom="@dimen/common_padding_default"
            />
        
        <androidx.cardview.widget.CardView

            android:layout_width="match_parent"
            android:layout_height="@dimen/item_card_height"
            app:cardCornerRadius="@dimen/common_padding_min"
            android:elevation="@dimen/common_padding_min"
            >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_circle_check"
                    android:layout_marginTop="@dimen/common_padding_default"
                    android:layout_marginStart="@dimen/common_padding_min"
                    />

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:padding="@dimen/common_padding_default"



                    >
                    <TextView

                        android:id="@+id/tvDescripcion"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua"

                        />
                    <TextView
                        android:id="@+id/tvNombreApellido"
                        android:paddingTop="@dimen/common_padding_default"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nombre Apellido"
                        />
                    <TextView
                        android:id="@+id/tvCargo"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Cargo del ponente"
                        />




                </LinearLayout>



            </LinearLayout>






        </androidx.cardview.widget.CardView>



    </LinearLayout>




</androidx.core.widget.NestedScrollView>